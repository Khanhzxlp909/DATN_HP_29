package com.example.DoAnTotNghiep_MiniatureCrafts.Service.Security;

import io.jsonwebtoken.Jwts;
import io.jsonwebtoken.security.Keys;
import io.jsonwebtoken.security.SignatureAlgorithm;
import jakarta.annotation.PostConstruct;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.security.core.Authentication;
import org.springframework.stereotype.Service;

import javax.crypto.SecretKey;
import java.nio.charset.StandardCharsets;
import java.util.Date;

@Service
public class JwtTokenProvider {

    private SecretKey secretKey;

    @Value("${jwt.secret}") // Lấy secretKey từ file cấu hình
    private String secretKeyString;

    @PostConstruct
    public void init() {
        // Khởi tạo SecretKey từ chuỗi `secretKeyString` đã cấu hình

        this.secretKey = Keys.hmacShaKeyFor(secretKeyString.getBytes(StandardCharsets.UTF_8));// làm sao cho key 256bit
    }
    public String generateToken(Authentication authentication) {
        return Jwts.builder()
                .setSubject(authentication.getName())
                .setIssuedAt(new Date())
                .signWith(secretKey, SignatureAlgorithm.HS256)  // Sử dụng khóa an toàn
                .compact();
    }
}
